    <body>
    <h1>TinyEarl</h1><h3><a href="/">Home</a>
    <% if(user != null) { %>| <a href="/urls/new">New URL</a><% } %>
    <% if(user == null) { %> | <a href="/register">Register</a></h3> <% } %>

    <% if(register == false) { %>
        <% if(user == null) { %>
            <form method="POST" action="/login">
                <label for="email">Email</label>
                    <input type="email" id="email" name="email">
                <label for="password">Password</label>
                    <input type="password" id="password" name="password">
                <input type="submit" class="btn btn-sm btn-success" value="Login!">
            </form>
        <% } else { %>
            <h4>Welcome back, <%= user['email'] %>!</h4>
            <form> <button class="btn btn-alert" formmethod="POST" formaction="/logout">Logout</button> </form>
        <% } %>

    <% } %>